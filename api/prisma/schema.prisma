generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum StatusPatrimonio {
  ATIVO
  MANUTENCAO
  BAIXADO
}

model Setor {
  setorid     Int          @id @default(autoincrement())
  nome        String
  createdAt   DateTime     @default(now())
  patrimonios Patrimonio[]
}

model Patrimonio {
  patrimonioid Int              @id @default(autoincrement())
  nome         String
  ni           String           @unique
  setorId      Int
  setor        Setor            @relation(fields: [setorId], references: [setorid], onDelete: Restrict)
  status       StatusPatrimonio @default(ATIVO)
  createdAt    DateTime         @default(now())
}
